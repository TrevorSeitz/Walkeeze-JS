<% if session[:user_id] %>
  <%= "Welcome #{@user.name} to Walk-eze " %>

  <p><%= button_to "Go to your Page", user_path(@user), {method: :get} %></p>
  <p><%= button_to "Book a Walk", walks_path, {method: :get} %></p><br>
<% else %>
<%= "Walk-eze - the easiest way to get your dog walked!" %>
  <%#= link_to('Log in with Facebook!', '/auth/facebook') %>
  <%#= link_to('Log in with Github!', '/auth/github') %>
  <p>
    <strong>Don't use GitHub?</strong><br>
    <%= link_to "Create an account", new_user_path %> or login below.
  </p>

  <%= form_tag "/login" do %>
    <div class="field">
      <%= label_tag :email, "Email" %><br>
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Login" %></div>
  <% end %>
<% end %>
